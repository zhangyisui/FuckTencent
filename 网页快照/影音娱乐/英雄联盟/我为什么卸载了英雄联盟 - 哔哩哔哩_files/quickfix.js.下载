        document.querySelector('.mini-vip').parentNode.insertBefore(a, null)
      })
    }

    if (location.href.indexOf('detail.vip.com') === -1) {
      return
    }

    if (Date.now() > (new Date('2021-04-26T10:00:00')).getTime()) {
      return
